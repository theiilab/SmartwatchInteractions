<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context=".views.x_ray_content.XRayContentActivity">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/x_ray_content_margin_parent"
        android:paddingBottom="80dp"
        android:orientation="vertical">
<!--        android:background="@drawable/img_blend_bg"-->
        <TextView
            android:id="@+id/price"
            android:layout_width="@dimen/x_ray_content_item_width"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x_ray_content_margin_between"
            android:layout_gravity="center_horizontal"
            android:textSize="16sp"
            android:textColor="@color/primary_text_color"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="$100"/>
        <TextView
            android:id="@+id/content"
            android:layout_width="@dimen/x_ray_content_item_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="12sp"
            android:textColor="@color/primary_text_color"
            android:textStyle="bold"
            android:text="asdfasdfsadf"/>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/x_ray_content_margin_between"
            app:cardCornerRadius="@dimen/x_ray_btn_corner_radius">
        <ImageButton
            android:id="@+id/x_ray_btn1"
            android:layout_width="@dimen/x_ray_content_item_width"
            android:layout_height="@dimen/x_ray_content_item_height"
            android:background="@color/transparent"
            android:src="@drawable/logo_amazon"
            android:scaleType="centerCrop"
            android:focusable="true"
            android:focusableInTouchMode="true"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/x_ray_content_margin_between"
            app:cardCornerRadius="@dimen/x_ray_btn_corner_radius">
            <ImageButton
                android:id="@+id/x_ray_btn2"
                android:layout_width="@dimen/x_ray_content_item_width"
                android:layout_height="@dimen/x_ray_content_item_height"
                android:background="@color/transparent"
                android:src="@drawable/logo_apple"
                android:scaleType="centerCrop"
                android:focusable="true"
                android:focusableInTouchMode="true"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/x_ray_content_margin_between"
            app:cardCornerRadius="@dimen/x_ray_btn_corner_radius">
            <ImageButton
                android:id="@+id/x_ray_btn3"
                android:layout_width="@dimen/x_ray_content_item_width"
                android:layout_height="@dimen/x_ray_content_item_height"
                android:background="@color/transparent"
                android:src="@drawable/logo_target"
                android:scaleType="centerCrop"
                android:focusable="true"
                android:focusableInTouchMode="true"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</ScrollView>