<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context=".views.search.SearchActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.8"
        android:background="@drawable/img_blend_circle_bg"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img_search_bg"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/default_background_reversed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/search_name"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:gravity="bottom"
        android:backgroundTint="@color/primary_color"
        android:focusable="true"
        android:textCursorDrawable="@null"
        android:cursorVisible="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <yuanren.tvsamrtwatch.smartwatchinteractions.views.search.DrawingView
        android:id="@+id/drawingView"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@id/search_name"/>

