<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/icon_container"
        android:layout_width="@dimen/menu_item_size"
        android:layout_height="@dimen/menu_item_size"
        android:layout_marginBottom="@dimen/menu_item_margin"
        android:background="@color/menu_icon_bg"
        app:cardCornerRadius="@dimen/menu_item_radius"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/menu_icon_size"
            android:layout_height="@dimen/menu_icon_size"
            android:layout_gravity="center"
            android:src="@drawable/baseline_search_24"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/menu_item_size"
        android:layout_marginLeft="@dimen/menu_item_margin"
        android:textAlignment="center"
        android:textSize="16sp"
        android:gravity="center"
        android:text="menu item"
        app:layout_constraintBaseline_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/icon_container"/>

</androidx.constraintlayout.widget.ConstraintLayout>