    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_item_size"
        android:layout_marginTop="@dimen/menu_item_margin"
        android:textAlignment="center"
        android:textSize="22sp"
        android:gravity="center"
        android:text="Menu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/search_icon"
        android:layout_width="@dimen/menu_item_size"
        android:layout_height="@dimen/menu_item_size"
        android:layout_marginTop="@dimen/menu_item_margin"
        android:background="@color/menu_icon_bg"
        android:onClick="onCheckItemClicked"
        app:cardCornerRadius="@dimen/menu_item_radius"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintLeft_toLeftOf="parent">
        <ImageView
            android:layout_width="@dimen/menu_icon_size"
            android:layout_height="@dimen/menu_icon_size"
            android:layout_gravity="center"
            android:src="@drawable/baseline_search_24"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/search_text"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/menu_item_size"
        android:layout_marginTop="@dimen/menu_item_margin"
        android:layout_marginLeft="@dimen/menu_item_margin"
        android:textAlignment="center"
        android:textSize="@dimen/menu_item_text_size"
        android:gravity="center"
        android:text="Search"
        android:onClick="onCheckItemClicked"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintLeft_toRightOf="@id/search_icon"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/home_icon"
        android:layout_width="@dimen/menu_item_size"
        android:layout_height="@dimen/menu_item_size"
        android:layout_marginTop="@dimen/menu_item_margin"
        android:background="@color/menu_icon_bg"
        android:onClick="onCheckItemClicked"
        app:cardCornerRadius="@dimen/menu_item_radius"
        app:layout_constraintTop_toBottomOf="@id/search_icon"
        app:layout_constraintLeft_toLeftOf="parent">
        <ImageView
            android:layout_width="@dimen/menu_icon_size"
            android:layout_height="@dimen/menu_icon_size"
            android:layout_gravity="center"
            android:src="@drawable/baseline_home_24"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/home_text"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/menu_item_size"
        android:layout_marginTop="@dimen/menu_item_margin"
        android:layout_marginLeft="@dimen/menu_item_margin"
        android:textAlignment="center"
        android:textSize="@dimen/menu_item_text_size"
        android:gravity="center"
        android:text="Home"
        android:onClick="onCheckItemClicked"
        app:layout_constraintTop_toBottomOf="@id/search_text"
        app:layout_constraintLeft_toRightOf="@id/home_icon"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/movie_icon"
        android:layout_width="@dimen/menu_item_size"
        android:layout_height="@dimen/menu_item_size"
        android:layout_marginTop="@dimen/menu_item_margin"
        android:background="@color/menu_icon_bg"
        android:onClick="onCheckItemClicked"
        app:cardCornerRadius="@dimen/menu_item_radius"
        app:layout_constraintTop_toBottomOf="@id/home_icon"
        app:layout_constraintLeft_toLeftOf="parent">
        <ImageView
            android:layout_width="@dimen/menu_icon_size"
            android:layout_height="@dimen/menu_icon_size"
            android:layout_gravity="center"
            android:src="@drawable/baseline_movie_24"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/movie_text"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/menu_item_size"
        android:layout_marginTop="@dimen/menu_item_margin"
        android:layout_marginLeft="@dimen/menu_item_margin"
        android:textAlignment="center"
        android:textSize="@dimen/menu_item_text_size"
        android:gravity="center"
        android:text="Movies"
        android:onClick="onCheckItemClicked"
        app:layout_constraintTop_toBottomOf="@id/home_text"
        app:layout_constraintLeft_toRightOf="@id/movie_icon"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/tv_icon"
        android:layout_width="@dimen/menu_item_size"
        android:layout_height="@dimen/menu_item_size"
        android:layout_marginTop="@dimen/menu_item_margin"
        android:background="@color/menu_icon_bg"
        android:onClick="onCheckItemClicked"
        app:cardCornerRadius="@dimen/menu_item_radius"
        app:layout_constraintTop_toBottomOf="@id/movie_icon"
        app:layout_constraintLeft_toLeftOf="parent">
        <ImageView
            android:layout_width="@dimen/menu_icon_size"
            android:layout_height="@dimen/menu_icon_size"
            android:layout_gravity="center"
            android:src="@drawable/baseline_tv_24"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/menu_item_size"
        android:layout_marginTop="@dimen/menu_item_margin"
        android:layout_marginLeft="@dimen/menu_item_margin"
        android:textAlignment="center"
        android:textSize="@dimen/menu_item_text_size"
        android:gravity="center"
        android:text="TV Channels"
        android:onClick="onCheckItemClicked"
        app:layout_constraintTop_toBottomOf="@id/movie_text"
        app:layout_constraintLeft_toRightOf="@id/tv_icon"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/setting_icon"
        android:layout_width="@dimen/menu_item_size"
        android:layout_height="@dimen/menu_item_size"
        android:layout_marginTop="@dimen/menu_item_margin"
        android:background="@color/menu_icon_bg"
        android:onClick="onCheckItemClicked"
        app:cardCornerRadius="@dimen/menu_item_radius"
        app:layout_constraintTop_toBottomOf="@id/tv_icon"
        app:layout_constraintLeft_toLeftOf="parent">
        <ImageView
            android:layout_width="@dimen/menu_icon_size"
            android:layout_height="@dimen/menu_icon_size"
            android:layout_gravity="center"
            android:src="@drawable/baseline_settings_24"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/setting_text"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/menu_item_size"
        android:layout_marginTop="@dimen/menu_item_margin"
        android:layout_marginLeft="@dimen/menu_item_margin"
        android:layout_marginBottom="30dp"
        android:textAlignment="center"
        android:textSize="@dimen/menu_item_text_size"
        android:gravity="center"
        android:text="Settings"
        android:onClick="onCheckItemClicked"
        app:layout_constraintTop_toBottomOf="@id/tv_text"
        app:layout_constraintLeft_toRightOf="@id/setting_icon"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/setting_icon"/>
</androidx.constraintlayout.widget.ConstraintLayout>